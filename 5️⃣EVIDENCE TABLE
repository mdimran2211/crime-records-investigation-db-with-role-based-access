-- Table: Evidence
CREATE TABLE Evidence (
    Evidence_ID INT PRIMARY KEY AUTO_INCREMENT,
    Case_ID INT,
    Evidence_Type VARCHAR(50),
    Collected_Date DATE,
    Location_Found VARCHAR(100),
    FOREIGN KEY (Case_ID) REFERENCES Crime_Case(Case_ID)
);

